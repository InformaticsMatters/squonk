kind: DeploymentConfig
apiVersion: v1
metadata:
  labels:
    app: squonk
  name: jobexecutor
  namespace: {{ oc_project }}
spec:
  replicas: 1
  selector:
    name: jobexecutor

  triggers:
  - type: ImageChange
    imageChangeParams:
      automatic: true
      containerNames:
      - jobexecutor
      from:
        kind: ImageStreamTag
        name: jobexecutor:{{ oc_squonk_je_image_tag }}
        namespace: {{ oc_project }}

  strategy:
    type: Recreate

  template:
    metadata:
      labels:
        name: jobexecutor
    spec:
      # A 'preferred' (not guaranteed)
      #Â node selection affinity...
      affinity:
        nodeAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 1
            preference:
              matchExpressions:
              - key: purpose
                operator: In
                values:
                - app

      serviceAccountName: {{ oc_project_sa }}

      containers:
      - name: jobexecutor
        env:
        - name: SQUONK_CONTAINER_RUNNER_TYPE
          value: openshift
        - name: SQUONK_DOCKER_WORK_DIR
          value: /squonk/work/docker
        - name: SQUONK_CELL_JOB_PROJECT_NAME
          value: {{ oc_project }}
        - name: SQUONK_SERVICE_ACCOUNT
          value: {{ oc_project_sa }}
        - name: SQUONK_POD_BASE_NAME
          value: squonk-cell-pod
        - name: SQUONK_POD_ENVIRONMENT
          valueFrom:
            secretKeyRef:
              name: squonk-app-secrets
              key: pod-env
        - name: SQUONK_POD_LOG_HISTORY
          value: '100'
        - name: SQUONK_JOBEXECUTOR_POLL_FOR_SERVICE_DESCRIPTORS
          value: "true"
        - name: SQUONK_NEXTFLOW_IMAGE
          value: {{ oc_squonk_nextflow_image }}
        - name: KEYCLOAK_SERVER_URL
          value: {{ oc_keycloak_server_url }}
        - name: KEYCLOAK_SERVER_REALM
          value: {{ oc_keycloak_realm }}
        - name: JAVA_TOOL_OPTIONS
          value: "{{ oc_squonk_je_java_tool_options }}"
        resources:
          limits:
            cpu: 4000m
            memory: 8Gi
          requests:
            cpu: {{ oc_squonk_je_cpu_request }}
            memory: {{ oc_squonk_je_mem_request }}
        volumeMounts:
        - mountPath: /squonk/work/docker
          name: squonk-work-dir
        - mountPath: /usr/local/tomcat/webapps/jobexecutor/META-INF/context.xml
          name: jobexecutor-sso-config
          subPath: context.xml
          readOnly: true
        - mountPath: /usr/local/tomcat/webapps/jobexecutor/WEB-INF/keycloak.json
          name: jobexecutor-sso-config
          subPath: keycloak.json
          readOnly: true
        - mountPath: /usr/local/tomcat/webapps/jobexecutor/WEB-INF/web.xml
          name: jobexecutor-sso-config
          subPath: web.xml
          readOnly: true
        - mountPath: /usr/local/tomcat/conf/server.xml
          name: jobexecutor-sso-config
          subPath: server.xml
          readOnly: true
      volumes:
      - name: squonk-work-dir
        persistentVolumeClaim:
          claimName: squonk-work-dir-pvc
      - name: jobexecutor-sso-config
        configMap:
          name: jobexecutor-sso-config
